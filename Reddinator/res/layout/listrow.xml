<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listrow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<TextView
    android:id="@+id/text1"
    android:paddingLeft="6dip"
    android:paddingTop="1dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dip"
    android:layout_alignParentLeft="true"
    android:layout_toLeftOf="@+id/votebox"
    android:layout_toRightOf="@+id/votebox"
    android:gravity="top"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:textColor="#000000" />

<RelativeLayout
    android:id="@+id/infbox"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignRight="@+id/text1"
    android:layout_below="@+id/text1"
    android:paddingBottom="2dip"
    android:paddingLeft="6dip"
    android:paddingTop="1dip" >

    <TextView
        android:id="@+id/sourcetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#336699" />

</RelativeLayout>

	<RelativeLayout
	    android:id="@+id/votebox"
	    android:layout_width="50dp"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/infbox"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true" >

		<ImageView
		    android:id="@+id/imageView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:src="@android:drawable/ic_menu_edit" />

	</RelativeLayout>
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="#929292"
	    android:layout_below="@+id/infbox">
	</RelativeLayout>
</RelativeLayout>