<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="Widget">
			<ListPreference
                android:key="onclickpref"
                android:title="On-Click Action"
                android:defaultValue="1"
                android:summary="When I click on a post.."
                android:entries="@array/entries_list_preference"
                android:entryValues="@array/entryvalues_list_preference"
                android:dialogTitle="When I click on a post.." />
    </PreferenceCategory>

    <PreferenceCategory
            android:title="Reddinator View">
		<CheckBoxPreference
                android:key="checkbox_preference"
                android:title="@string/app_name"
                android:defaultValue="false"
                android:summary="@string/app_name" />
        
        <EditTextPreference
                android:key="edittext_preference"
                android:title="@string/app_name"
                android:summary="@string/app_name"
                android:defaultValue=""
                android:dialogTitle="@string/app_name" />

    </PreferenceCategory>

</PreferenceScreen>